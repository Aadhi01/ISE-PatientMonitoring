<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <DataGrid Name="_dg" MouseDoubleClick="MouseDoubleClick" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,40,0,0" VerticalAlignment="Top"/>
        <Label Content="Patient Name" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top"/>
        <TextBox TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Margin="99,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185"/>
        <Button Content="Fetch Details" HorizontalAlignment="Left" Margin="318,13,0,0" VerticalAlignment="Top"/>
        <Label Name="lbl_LoggedInUser" HorizontalAlignment="Left" Margin="759,0,0,0" VerticalAlignment="Top"/>
        <Button Content="Add Record" HorizontalAlignment="Left" Margin="513,11,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
