<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        ResizeMode="NoResize"
        
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300">
    <Grid HorizontalAlignment="Left" Width="300">
        <Label Content="User Name" Height="30" Width="100" Margin="10,18,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Name="txt_userName" Text="" TextWrapping="Wrap" Width="120" Height="17" Margin="115,26,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Password" Height="30" Width="100" Margin="10,62,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox TextWrapping="Wrap" Width="120" Height="17" Margin="115,70,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button Content="Sign In" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60" Margin="175,130,0,0" Click="Button_Click"/>

    </Grid>
</Window>
